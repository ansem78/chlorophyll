{
  "name": "chlorophyll",
  "version": "1.0.0",
  "description": "Lightweight CSS framework focused on structure.",
  "scripts": {
    "css": "npm-run-all css-compile css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --stop-on-error scss/:dist/",
    "css-lint": "stylelint \"dist/*[!.min].css\" --cache --cache-location=.cache/.stylelintcache --rd",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/chlorophyll.min.css dist/chlorophyll.css",
    "css-minify-debug": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/debug-layout.min.css dist/debug-layout.css && cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/debug-helpers.min.css dist/debug-helpers.css",
    "setup": "yarn install || exit 0",
    "test": "echo Error: no test specified. && exit 0"
  },
  "author": "Alexandro Morato",
  "keywords": [
    "css",
    "sass",
    "scss",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "style": "dist/chlorophyll.css",
  "sass": "scss/chlorophyll.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ansem78/chlorophyll.git"
  },
  "bugs": {
    "url": "https://github.com/ansem78/chlorophyll/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0"
  },
  "files": [
    "dist/*.{css,map}",
    "scss/**/*.scss"
  ],
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "sass": "^1.29.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0"
  }
}
